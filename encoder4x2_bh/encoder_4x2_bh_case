module encoder_4x2_bh_case(Q,D);
  output reg [1:0] Q;
  input [3:0] D;
  
  always@(*)begin
    case(D)
      4'd1:Q=2'd0;
      4'd2:Q=2'd1;
      4'd4:Q=2'd2;
      4'd8:Q=2'd3;
      4'd0,4'd3,4'd5,4'd6,4'd7,4'd9,4'd10,4'd11,4'd12,4'd13,4'd14,4'd15:Q=2'd0;
      $default("Error in choice");
      end case
    end
endmodule
